{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.photos_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.photos_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'photos.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'photos.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.description'|trans, 'photos.description') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.photo_path'|trans, 'photos.photo_path') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.upload_date'|trans, 'photos.upload_date') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for photos in pagination.items %}
                <tr>
                    <td>{{ photos.id }}</td>
                    <td>{{ photos.title }}</td>
                    <td>{{ photos.description }}</td>
                    <td>{{ photos.photoPath }}</td>
                    <td>{{ photos.uploadDate|format_date('long') }}</td>
                    <td>
                        <a href="{{ url('photos_show', {id: photos.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

{% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}