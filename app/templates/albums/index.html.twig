{% extends 'base.html.twig' %}

{% block name %}
    {{ 'name.albums_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'name.albums_list'|trans }}</h1>
    <nav class="nav">
        <a href="{{ url('photos_index') }}" name="{{ 'action.back_to_list'|trans }}" class="nav-link">
            {{ 'action.back_to_list'|trans }}
        </a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('albums_create') }}" name="{{ 'action.albums_create'|trans }}" class="nav-link">
                {{ 'action.albums_create'|trans }}
            </a>
        {% endif %}


    </nav>
    {% if pagination is defined and pagination.items|length %}

        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'albums.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'albums.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.description'|trans, 'albums.description') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'albums.created_at') }}</th>

                {% if is_granted('ROLE_ADMIN') %}
                    <th>{{ 'label.actions'|trans }}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for albums in pagination.items %}
                <tr>
                    <td>{{ albums.id }}</td>
                    <td>{{ albums.name }}</td>
                    <td>{{ albums.description }}</td>
                    <td>{{ albums.created_at|format_date('long') }}</td>

                    <td>
                        {% if is_granted('EDIT', albums) %}
                            <a href="{{ url('albums_show', {id: albums.id}) }}" name="{{ 'action.show'|trans }}" class="btn btn-outline-secondary">
                                {{ 'action.show'|trans }}
                            </a>
                        {% endif %}

                        {% if is_granted('EDIT', albums) %}
                            <a href="{{ url('albums_edit', {'id': albums.id}) }}" name="{{ 'action.edit'|trans }}" class="btn btn-outline-primary">
                                {{ 'action.edit'|trans }}
                            </a>
                        {% endif %}

                        {% if is_granted('DELETE', albums) %}
                            <a href="{{ url('albums_delete', {'id': albums.id}) }}" name="{{ 'action.delete'|trans }}" class="btn btn-outline-danger">
                                {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}